<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/ingrAmount"
        android:fontFamily="@font/cousine_bold"
        android:layout_width="186dp"
        android:layout_height="52dp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Amount"
        android:inputType="number|numberDecimal"
        app:layout_constraintStart_toStartOf="@+id/ingrName"
        app:layout_constraintTop_toBottomOf="@+id/ingrName" />

    <Spinner
        android:id="@+id/ingrType"
        android:fontFamily="@font/cousine_bold"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:entries="@array/measurements"
        app:layout_constraintEnd_toEndOf="@+id/ingrName"
        app:layout_constraintStart_toEndOf="@+id/ingrAmount"
        app:layout_constraintTop_toBottomOf="@+id/ingrName" />

    <Button
        android:id="@+id/enter"
        android:fontFamily="@font/cousine_bold"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:text="ENTER"
        app:layout_constraintEnd_toEndOf="@+id/ingrType"
        app:layout_constraintTop_toBottomOf="@+id/ingrType" />

    <Button
        android:id="@+id/cancel"
        android:fontFamily="@font/cousine_bold"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:text="CANCEL"
        app:layout_constraintStart_toStartOf="@+id/ingrAmount"
        app:layout_constraintTop_toBottomOf="@+id/ingrAmount" />

    <EditText
        android:id="@+id/ingrName"
        android:fontFamily="@font/cousine_bold"
        android:layout_width="330dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>